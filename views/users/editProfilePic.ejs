<% layout("layout/boilerplate")%>
<div class="container mt-5">
  <div><h3>Your Profile Pic</h3></div>
  <div class="container d-flex flex-row">
    <div class="container col-6">
      '
      <img src="<%=imgLink%>" alt="" />
      <div class="container">
        <a href="/deleteProfilePic" class="btn btn-danger mt-4"
          >Delete Profile Picture</a
        >
      </div>
    </div>
    <div class="container col-6">
      <h4>Edit Image</h4>
      <form
        action="/editProfilePic"
        method="POST"
        class="validated-form"
        novalidate
        enctype="multipart/form-data"
      >
        <label for="profile_pic">Add A Profile Picture : </label>
        <input type="file" id="profile_pic" name="image" />
        <button type="submit" class="btn btn-dark">Edit</button>
      </form>
    </div>
  </div>
</div>
