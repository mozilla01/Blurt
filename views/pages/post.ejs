<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=singlePost.user%>'s Post</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="stylesheet" href="/stylesheets/singlePost.css" />
  </head>
  <body>
    <%- include('../partials/navbar')%>
    <main>
      <div
        class="modal fade"
        id="deleteModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                Delete reply?
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div id="delete-reply-form">
                <div class="mb-3">
                  <label for="message-text" class="col-form-label"
                    >Are you sure you want to delete this reply?</label
                  >
                  <input type="hidden" name="post_id" id="delete-id" />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="button"
                    class="btn btn-danger"
                    onclick="deleteReply()"
                  >
                    Yes, I'm sure
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid" id="main-body">
        <div class="container" id="work">
          <div class="card text-center" id="post_card">
            <div class="card-header">@ <%=singlePost.user%></div>
            <div class="card-body">
              <h5 class="card-title"></h5>
              <pre class="card-text"><%=singlePost.content %></pre>
              <div class="d-flex justify-content-end">
                <div>
                  <span id="heart" class="material-symbols-outlined">
                    favorite
                  </span>
                </div>
                <span class="ms-2 pr-5"><%=singlePost.likes%></span>
              </div>
              <button
                class="btn btn-primary"
                onclick="document.querySelector('.replies-container').classList.toggle('hidden');"
              >
                View Comments
              </button>
            </div>
            <div class="card-footer text-body-secondary">
              <%=singlePost.created %>
            </div>
          </div>
          <!--Replies section-->
          <div class="replies-container hidden">
            <div class="input-reply">
              <input
                type="text"
                name="reply"
                class="form-control"
                id="reply-content"
                placeholder="Add comment"
              />
              <button
                class="btn btn-secondary"
                id="send-reply"
                type="button"
                onclick="sendReply('<%=user%>', '<%=singlePost.id%>')"
              >
                Send
              </button>
            </div>
            <div id="replies">
              <% for(const reply of replies) { %>
              <div class="card mb-4" id="reply-<%=reply.id%>">
                <div class="card-body">
                  <p><%=reply.content%></p>

                  <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                      <!-- <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(4).webp"
                    alt="avatar"
                    width="25"
                    height="25"
                    /> -->
                      <p class="small mb-0 ms-2"><%=reply.user%></p>
                    </div>
                    <div class="d-flex flex-row align-items-center">
                      <p class="small text-muted mb-0"><%=reply.created%></p>
                      <i
                        class="far fa-thumbs-up mx-2 fa-xs text-black"
                        style="margin-top: -0.16rem"
                      ></i>
                      <% if (reply.user === user) { %>
                      <span
                        class="material-symbols-outlined"
                        id="delete-reply"
                        data-bs-toggle="modal"
                        data-bs-target="#deleteModal"
                        data-bs-whatever="@mdo"
                        onclick="document.getElementById('delete-id').value=`<%=reply.id%>`"
                      >
                        delete
                      </span>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <%- include('../partials/footer')%>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/reply.js"></script>
  </body>
</html>
