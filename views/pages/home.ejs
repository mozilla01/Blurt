<% layout("layout/boilerplate")%>

<h1>Welcome to Our Social Media App</h1>

<a href="/login">Login</a>
<a href="/signup">Signup</a>

<a href="/welcome">Welcome , only for registered users</a><br />
<% for( let post of posts){ %>
<div class="card">
  <div class="card-header"><%= post.user %></div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= post.content %></p>
      <footer class="blockquote-footer"><%= post.created %></footer>
    </blockquote>
  </div>
</div>
<br />
<%}%>
