<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Friends</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/friends.css" />
  </head>
  <body>
    <%- include('../partials/navbar')%>
    <main>
      <div class="container-fluid" id="main-body">
        <div class="d-flex vh-100">
          <div class="col-6 mt-4">
            <div>
              <h3 class="mt-5 mb-5 text-center">Followers</h3>
            </div>

            <div class="scrollable">
              <% if(user.followers && user.followers.length>0) { for(let
              follower of user.followers){%>
              <div class="card mt-3 mb-3">
                <div class="card-body d-flex">
                  <blockquote class="blockquote mb-0">
                    <p><%= follower.username %></p>
                  </blockquote>
                  <%if (user.following && user.following.some((following) =>
                  following.username === follower.username)) {%>
                  <form action="" class="ms-auto">
                    <button class="btn btn-light">
                      <span> Following</span>
                    </button>
                  </form>
                  <% } else { %>

                  <form
                    action="/social-media/<%=follower.username%>/followback"
                    class="ms-auto"
                  >
                    <button class="btn btn-dark">
                      <span> Follow Back</span>
                    </button>
                  </form>

                  <% } %>
                </div>
              </div>
              <% } } %>
            </div>
          </div>
          <div class="col-6 mt-4">
            <div>
              <h3 class="mt-5 mb-5 text-center">Following</h3>
            </div>
            <div class="scrollable">
              <% if(user.following && user.following.length>0) {
              user.following.map((obj)=>{ %>
              <div class="card mt-3 mb-3">
                <div class="card-body d-flex">
                  <blockquote class="blockquote mb-0">
                    <p><%= obj.username %></p>
                  </blockquote>
                  <form action="" class="ms-auto">
                    <button class="btn btn-danger">
                      <span> Unfollow</span>
                    </button>
                  </form>
                </div>
              </div>
              <% }) } %>
            </div>
          </div>
        </div>
      </div>
      <%- include('../partials/footer')%>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
